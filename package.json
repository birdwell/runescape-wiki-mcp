{
  "name": "runescape-wiki-mcp",
  "version": "1.0.0",
  "description": "MCP server for RuneScape Wiki APIs - provides access to Grand Exchange prices, item data, and player statistics for RuneScape 3 (RS3)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "debug": "DEBUG=true node dist/index.js",
    "dev": "tsc --watch & node --watch dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:verbose": "NODE_OPTIONS='--experimental-vm-modules' jest --verbose",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "runescape",
    "rs3",
    "grand-exchange",
    "api",
    "wiki"
  ],
  "author": "Josh Birdwell",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.4",
    "jest": "^29.7.0",
    "nock": "^13.5.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}